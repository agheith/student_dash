<div class="container">

    <div class="row">
        <h1>New Student</h1>
    <div class="cold-md-4">
        <form action="/dojos/<%= @dojo.id %>/students" method="post">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token  %>">

          <div class="form-group">
            <label for="f_name">First Name</label>
            <input type="text" class="form-control" id="f_name" name="student[first_name]">
          </div>

          <div class="form-group">
            <label for="l_name">Last Name</label>
            <input type="text" class="form-control" id="l_name" name="student[last_name]">
          </div>

          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="student[email]">
          </div>

          <div class="form-group">
              <label for="sel1">Dojos:</label>
              <select class="form-control" id="sel1" name="student[dojo_id]">
                  
                  <option value="<%= @dojo.id %>"><%= @dojo.branch  %></option>

                  <% @other_dojos.each do |dojo| %>

                  <option value="<%= @dojo.id %>"><%= @dojo.branch  %></option>

                  <% end %>

              </select>
          </div>

          <button type="submit" class="btn btn-primary">Create</button>
        </form>
        <hr>
        <a href="/dojos">Home</a>  |  <a href="/dojos">Branch name</a>
    </div>


</div>
