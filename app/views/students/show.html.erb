<div class="container">

    <div class="row">
        <h1><%= @student.branch %>'s <%= @student.first_name %></h1>
        <p>Email: <%= @student.email %></p>
        <hr>

        <h3>Cohort</h3>

        <div class="col-md-12">
            <table class="highlight table">
              <thead>
                <tr>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Email</th>
                </tr>
              </thead>
              <tbody>

                  <% @cohort_mates.each do |student| %>

                  <tr>
                      <td><%= @student.first_name %></td>
                      <td><%= @student.last_name %></td>
                      <td><%= @student.email %></td>
                  </tr>

                  <% end %>

              </tbody>
            </table>
            <hr>
            <a href="/dojos">Home</a> | <a href="">Edit</a>

    </div>


</div>
