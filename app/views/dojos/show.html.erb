<div class="container">

    <div class="row">
        <h1><%= @dojo.branch  %> Dojo</h1>
        <p>Address: Street Name </p>
        <p>City: <%= @dojo.city %>  State: <%= @dojo.state %> </p>
        <a href="/dojos">Home</a> | <a href="dojos/:id/edit">Edit</a>
        <hr>

        <h3>Student Roster</h3>

        <div class="col-md-12">
            <table class="highlight table">
              <thead>
                <tr>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Email</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>

                  <% @students.each do |student| %>

                  <tr>
                      <td><%= student.first_name %></td>
                      <td><%= student.last_name %></td>
                      <td><%= student.email %></td>
                      <td>
                          <a href='/dojos/<%= @dojo.id %>/students/<%= student.id %>'>Show</a> | <a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>/edit">Edit</a> | <a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>" data-method="delete">Destroy</a>
                      </td>
                  </tr>

                  <% end %>

              </tbody>
            </table>
            <hr>
            <a href="/dojos/<%= @dojo.id  %>/students/new">New Student</a>

    </div>


</div>
